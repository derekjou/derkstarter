<h2>Create project</h2>

<!-- Part 2: Create project -->
<form action="/new" method="POST">
    <p>
        <div>
            <label for="title">Title</label>
        </div>
        <input type="text" name="title" value="{{title}}">
        {{#unless first}}
        {{#unless title}}
        <p> &nbsp Please enter a title</p>
        {{/unless}}
        {{/unless}}
    </p>
    <p>
        <div>
            <label for="goal">Goal</label>
        </div>
        <input type="number" name="goal" value="{{goal}}">
        {{#unless first}}
        {{#if notNum}}
        <p> &nbsp Please enter a valid number</p>
        {{/if}}
        {{/unless}}
    </p>
    <p>
        <div>
            <label for="description">Description</label>
        </div>
        <textarea name="description" id="" cols="30" rows="10" value="{{description}}"></textarea>
    </p>
    <p>
        <div>
            <label for="start">Start date</label>
        </div>
        <input type="date" name="start" value="{{start}}">
        {{#unless first}}
        {{#unless start}}
        <p> &nbsp Please enter a start date</p>
        {{/unless}}
        {{/unless}}
    </p>
    <p>
        <div>
            <label for="end">End date</label>
        </div>
        <input type="date" name="end" value="{{end}}">
        {{#unless first}}
        {{#unless end}}
        <p> &nbsp Please enter an end date</p>
        {{/unless}}
        {{/unless}}
    </p>
    <!-- Part 5: Project categories -->
    <!-- YOUR CODE HERE -->
    <p>
        <div>
            <label for="category">Category</label>
        </div>
        <select name="category">
            <option value="Famous Muppet Frogs">Famous Muppet Frogs</option>
            <option value="Current Black Presidents">Current Black Presidents</option>
            <option value="The Pen is Mightier">The Pen is Mightier</option>
            <option value="Famous Mothers">Famous Mothers</option>
            <option value="Drummers Named Ringo">Drummers Named Ringo</option>
            <option value="1-Letter Words">1-Letter Words</option>
            <option value="Months that start with 'Feb'">Months that start with 'Feb'</option>
            <option value="How Many Fingers Am I Holding Up">How Many Fingers Am I Holding Up</option>
            <option value="Potent Potables">Potent Potables</option>
        </select>
    </p>
    <button type="submit">START YOUR CAMPAIGN</button>
</form>